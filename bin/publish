#!/bin/sh

if [ "$USER" != wakita ]; then
  echo "GitHub で pull request を発行し，脇田に publish をご依頼下さい．"
  exit 0
fi


bin/convert symp2021
echo

/bin/echo -n 'パブリッシュのためにコピーを更新しますか？ (y/n): '
read -n 1 yn; echo
case "$yn" in
  [Yy])
    rsync --verbose --exclude-from='lib/exclude.rsync' --recursive site/ symp2021/ ;;

  *) exit 0 ;;
esac

/bin/echo -n 'ウェブサイトを更新しますか？ (y/n): '
read -n 1 yn; echo
case "$yn" in
  [Yy])
    cd symp2021
    git add . && git commit && git ftp push ;;
esac
