#!/bin/sh

if [ "$USER" != wakita ]; then
  echo "GitHub で pull request を発行し，脇田に publish をご依頼下さい．"
  exit 0
fi

cd $DROPBOX/doc/events/vsj49
bin/convert
echo

RSYNC_OPTIONS="--recursive --files-from=lib/rsync-files.txt site/ symp2021/"
echo "rsync --dry-run --verbose $RSYNC_OPTIONS"
rsync --dry-run --verbose $RSYNC_OPTIONS

echo; /bin/echo -n 'パブリッシュのためにコピーを更新しますか？ (y/n): '
read -n 1 yn; echo
case "$yn" in
  [Yy]) rsync $RSYNC_OPTIONS ;;

  *) exit 0 ;;
esac

message=`git log --abbrev-commit --oneline | head -1`
echo "\n$message"
/bin/echo -n 'ウェブサイトを更新しますか？ (y/n): '
read -n 1 yn; echo
case "$yn" in
  [Yy])
    cd symp2021
    git add . && git commit -m "$message" && git ftp push ;;
esac
