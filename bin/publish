#!/bin/sh

if [ "$USER" != wakita ]; then
  echo "GitHub で pull request を発行し，脇田に publish をご依頼下さい．"
  exit 0
fi


bin/convert symp2021
/bin/echo -n 'Publish to the FTP server? (y/n): '
read -n 1 yn; echo

# echo "[$yn]"

case "$yn" in
  [Yy])
    rsync --exclude-from='lib/exclude.rsync' --recursive site/ symp2021
    cd symp2021
    git add . && git commit && git ftp push ;;
esac
